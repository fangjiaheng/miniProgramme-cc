
.calender-container{
  padding: 50rpx 25rpx 0 25rpx;
}

.calendar {
  background-color: rgba(255, 192, 203, .8);
  padding-top: 15rpx;
  border-radius: 15rpx;
}

.calender-header {
  font-size: large;
  color: #F15D77;
}

.calender-board {
  color: #4d2105;
  font-weight: bold;
}

.sign{
  margin: 0 25rpx;
  padding: 10rpx 20rpx;
  background-color: rgb(135, 206, 235);
  color: rgb(255, 255, 255);
  font-size: 40rpx;
  text-align: center;
  border-radius: 15rpx;
}

.points{
  margin: 0 15rpx;
  text-align: center;
}

.list{
  margin: 50rpx 25rpx;
}

.list-item{
  display: flex;
  justify-content: space-between;
  align-items: center;

  padding: 15rpx 30rpx;
  background-color: rgba(255, 255, 255, 1);
  /* border-radius: 10rpx; */
  border-bottom: 1px solid rgba(253, 128, 150, .5);
}

.list-item:last-child{
  border-bottom: unset;
}

.card{
  margin: 50rpx 15rpx;
}

.card-title{
  font-size: 40rpx;
}

.card-content{
  margin-top: 15rpx;
  display: flex;
  justify-content: space-between;
  /* grid: 20rpx; */
}

.coupon{
  width: 47%;
  height: 150rpx;
  line-height: 150rpx;
  background-color: pink;
  text-align: center;
  border-radius: 15rpx;
}

.background {
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:100% 100%;
  z-index: -1;
}